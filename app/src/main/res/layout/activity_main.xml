<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aristalia.bmi.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <ImageView
                android:id="@+id/thenaturalway"
                android:src="@drawable/thenaturalway"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>



        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.95">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="MBI Ltd"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-black"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Mobile Business Integration"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-black"
                android:padding="8dp"
                android:layout_weight="1.3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:text="MBI is a company specialized in supporting our partners to smoothly integrate their business into the mobile world. The Natural Way.
"
                android:textSize="16sp"
                android:textAlignment="center"
                android:background="#4472C4"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Natural Way"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-black" />

    <Button
        android:id="@+id/tellMeMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell me more about The Natural Way"
        android:background="#4472C4"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:onClick="tellMeMoreTheNaturalWay"/>

    <ImageButton
        android:id="@+id/buttonHome"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/ic_home_black_24dp"
        android:layout_above="@id/tellMeMore"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:onClick="seeAddressData"/>

    <ImageButton
        android:id="@+id/buttonCall"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/ic_call_black_24dp"
        android:layout_toLeftOf="@id/buttonHome"
        android:layout_above="@id/tellMeMore"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="96dp"
        android:onClick="makeCall"/>


    <ImageButton
        android:id="@+id/buttonMail"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/ic_email_black_24dp"
        android:layout_toRightOf="@id/buttonHome"
        android:layout_above="@id/tellMeMore"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="96dp"
        android:contentDescription="Mail"
        android:onClick="sendMail"/>


</RelativeLayout>