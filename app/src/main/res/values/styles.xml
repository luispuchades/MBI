<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MBI_Ltd">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="mobile_business_integration">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="MBI_core_business">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/colorBannerBackground</item>
        <item name="android:textColor">@color/colorBannerText</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="the_natural_way">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorBannerText</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="tell_me_more">
        <item name="android:text">@string/tell_me_more</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/colorBannerBackground</item>
        <item name="android:textColor">@color/colorBannerText</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="buttonHome">
        <item name="android:background">@drawable/ic_home_black_24dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_above">@id/tellMeMore</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:contentDescription">Postal address</item>
    </style>

    <style name="buttonCall">
        <item name="android:background">@drawable/ic_call_black_24dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_toLeftOf">@id/buttonHome</item>
        <item name="android:layout_above">@id/tellMeMore</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginRight">96dp</item>
        <item name="android:contentDescription">Telephone number</item>
    </style>

    <style name="buttonMail">
        <item name="android:background">@drawable/ic_email_black_24dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_toRightOf">@id/buttonHome</item>
        <item name="android:layout_above">@id/tellMeMore</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">96dp</item>
        <item name="android:contentDescription">Mail</item>
    </style>

</resources>
